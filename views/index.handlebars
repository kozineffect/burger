<div class="container-fluid">
  <div class="jumbotron">
    <h1 class="text-center">Burgers!</h1>
  </div>
  <img src="/assets/img/burgers.jpg" class="img-responsive img-rounded" alt="Responsive image">
</div>
<br>

<div class="container-fluid">
  <div class="jumbotron">

    <h2 class="text-center">Burgers to be devoured!</h2>
    <br>
    <ul>
      {{#each burgers}} {{#unless this.devour}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="false">
          <button type="submit">DEVOUR!</button>
        </form>

      </li>
      {{/unless}} {{/each}}
    </ul>
  </div>
</div>

<div class="container-fluid">
  <div class="jumbotron">
    <h2 class="text-center">Burgers that have been devoured!</h2>
    <br>
    <ul>
      {{#each burgers}} {{#if this.devour}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
        </form>

      </li>
      {{/if}} {{/each}}
    </ul>
  </div>
</div>

<div class="container-fluid">
  <div class="jumbotron">
    <h2 class="text-center">Add a burger!</h2>
    <br>
    <form class="create-update-form" action="/" method="POST">

      <div class="form-group">
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="name">
      </div>

      <div class="form-group" type="hidden">
        <input type="hidden" name="devour" value="0">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>