<h1>Burgers!</h1>

<h2>Burgers to be devoured!</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devour}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="false">
          <button type="submit">DEVOUR!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devour}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devour" value="true">
        </form>

      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a burger!</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="name">
  </div>

  <div class="form-group" type="hidden">
    <input type="hidden" name="devour" value="0">
  </div>

  <button type="submit">Add Burger</button>
</form>
